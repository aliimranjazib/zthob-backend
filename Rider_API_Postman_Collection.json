				{
					"name": "Login Rider",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.data && jsonData.data.tokens) {",
									"        pm.collectionVariables.set('rider_access_token', jsonData.data.tokens.access_token);",
									"        pm.collectionVariables.set('rider_refresh_token', jsonData.data.tokens.refresh);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"rider_username\",\n    \"password\": \"password123\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/accounts/login/",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"accounts",
								"login",
								""
							]
						},
						"description": "Login as rider. Accepts username, email, or phone number. Auto-saves access token to collection variable."
					},
					"response": []
				},
				{
					"name": "Register Rider",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200 || pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.data && jsonData.data.tokens) {",
									"        pm.collectionVariables.set('rider_access_token', jsonData.data.tokens.access_token);",
									"        pm.collectionVariables.set('rider_refresh_token', jsonData.data.tokens.refresh);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"rider_username\",\n    \"email\": \"rider@example.com\",\n    \"password\": \"password123\",\n    \"password_confirm\": \"password123\",\n    \"phone_number\": \"+966501234567\",\n    \"full_name\": \"Rider Full Name\",\n    \"first_name\": \"First\",\n    \"last_name\": \"Last\"\n}",
